//*****************************************************************************
//
//! \addtogroup example_list
//! <h1>UART Echo (uart_echo)</h1>
//!
//! This example application utilizes the UART to echo text.  The first UART
//! (connected to the USB debug virtual serial port on the evaluation board)
//! will be configured in 115,200 baud, 8-n-1 mode.  All characters received on
//! the UART are transmitted back to the UART.
//
//*****************************************************************************

//****************************************************************************
//
// System clock rate in Hz.
//
//****************************************************************************
uint32_t g_ui32SysClock;
comTest Canal;
char anymass[100];
//uint32_t toogle = 0;
Input Inputs;
uint8_t anum = 0;

//*****************************************************************************
//
// The error routine that is called if the driver library encounters an error.
//
//*****************************************************************************
#ifdef DEBUG
void
__error__(char *pcFilename, uint32_t ui32Line)
{
}
#endif

//*****************************************************************************
//
// The UART interrupt handler.
//
//*****************************************************************************
void
UARTIntHandler(void)
{
    uint32_t ui32Status;

    //
    // Get the interrrupt status.
    //
    ui32Status = ROM_UARTIntStatus(UART0_BASE, true);

    //
    // Clear the asserted interrupts.
    //
    ROM_UARTIntClear(UART0_BASE, ui32Status);

    //
    // Loop while there are characters in the receive FIFO.
    //
    while(ROM_UARTCharsAvail(UART0_BASE))
    {
        //
        // Read the next character from the UART and write it back to the UART.
        //
        //ROM_UARTCharPutNonBlocking(UART0_BASE,ROM_UARTCharGetNonBlocking(UART0_BASE));
        Canal.ReadMess(UARTCharGetNonBlocking(UART0_BASE));


    }
}
//*****************************************************************************
//
// The Timer interrupt handler.
//
//*****************************************************************************
void
TimerIntHandlerInput(void){

    TimerIntClear(TIMER1_BASE, TIMER_TIMA_TIMEOUT);
    Inputs.ReadInputs();
    Inputs.ReadAdc();
}

//*****************************************************************************
//
// Send a string to the UART.
//
//*****************************************************************************
void
UARTSend(const uint8_t *pui8Buffer, uint32_t ui32Count, uint32_t num_uart)
{
    //
    // Loop while there are more characters to send.
    //
    while(ui32Count--)
    {
        //
        // Write the next character to the UART.
        //
        ROM_UARTCharPutNonBlocking(num_uart, *pui8Buffer++);
    }
}

//*****************************************************************************
//
// This example demonstrates how to send a string of data to the UART.
//
//*****************************************************************************
int
main(void)
{
    //
    // Set the clocking to run directly from the crystal at 120MHz.
    //
    g_ui32SysClock = MAP_SysCtlClockFreqSet((SYSCTL_XTAL_25MHZ |
                                             SYSCTL_OSC_MAIN |
                                             SYSCTL_USE_PLL |
                                             SYSCTL_CFG_VCO_480), 120000000);
    //
    // Enable the GPIO port that is used for the on-board LED.
    //
    PinoutSet();

    ROM_IntMasterEnable();
    UARTIntRegister(UART0_BASE,UARTIntHandler );
    TimerIntRegister(TIMER1_BASE, TIMER_A, TimerIntHandlerInput);
    //
    ROM_GPIOPinTypeGPIOOutput(GPIO_PORTN_BASE, GPIO_PIN_0);


    //
    // Prompt for text to be entered.
    //
    UARTprintf("Start\n");

    SSIDataPut(SSI1_BASE, 0x26);


    //
    // Loop forever echoing data through the UART.
    //
    while(1)
    {
       SysCtlDelay(g_ui32SysClock/20);//100 мс пауза между считыванием состояния входов
       //Inputs.ReadInputs();
       //Inputs.ReadAdc();



    }
}
